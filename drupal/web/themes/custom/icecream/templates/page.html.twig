<div class="layout-container">

  <header role="banner">
    {{ page.header }}
  </header>

  {{ page.primary_menu }}

  {% if page.banner_top %}
  <div class="layout-banner-top" role="banner">
    {{ page.banner_top }}
  </div>
  {% endif %}

  {{ page.help }}

  <main role="main">
    <div class="visually-hidden"><a id="main-content" tabindex="-1"></a></div>
    {% if page.breadcrumb or page.header %}
      <header class="content-header clearfix">
        <div class="layout-container">
          {{ page.breadcrumb }}
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    <div class="layout-container">
      {{ page.pre_content }}
      <div class="page-content clearfix">
        {{ page.highlighted }}
        {% if page.help %}
          <div class="help">
            {{ page.help }}
          </div>
        {% endif %}
        {{ page.content }}
        {{ page.content_bottom }}
      </div>
    </div>
  </main>

  {% if page.banner_bottom %}
  <div class="layout-banner-bottom" role="banner">
    {{ page.banner_bottom }}
  </div>
  {% endif %}

  {% if page.footer %}
  <footer role="contentinfo">
    {{ page.footer }}
  </footer>
  {% endif %}

</div> <!-- Closing layout-container -->
