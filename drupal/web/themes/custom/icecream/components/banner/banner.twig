    <style>
        /* Banner Styling */
        .banner {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #eef1f7;
            padding: 24px 32px;
            font-family: 'Arial', sans-serif;
            border-bottom: 3px solid #0a183d;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .banner h1 {
            font-size: 8rem;
            font-weight: bold;
            color: #0a183d;
            margin: 0;
            letter-spacing: 1px;
        }

        .banner .subtext {
            font-size: 1.25rem;
            font-weight: 500;
            color: #0a183d;
            margin-left: 12px;
            border-left: 3px solid #0a183d;
            padding-left: 12px;
            opacity: 0.8;
        }

        /* Hero Video Section */
        .hero-video {
            position: relative;
            width: 100%;
            height: 80vh; /* Large video section */
            overflow: hidden;
            margin-top:20px;
        }

        .hero-video video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .hero-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            {# background: rgba(0, 0, 0, 0.5); #}
            padding: 20px 30px;
            border-radius: 10px;
        }

        @media (max-width: 768px) {
            .banner {
                flex-direction: column;
                text-align: center;
                padding: 16px;
            }

            .banner .subtext {
                margin-left: 0;
                border-left: none;
                padding-left: 0;
                margin-top: 8px;
            }

            .hero-video {
                height: 50vh; /* Smaller height for mobile */
                autoplay: true;
            }

            .hero-overlay {
                font-size: 1.5rem;
                padding: 15px 20px;
            }
        }
    </style>

    <!-- Banner -->
    {% if is_homepage %}

    <<div class="banner">
    <h1>TheHours</h1>
    <span class="subtext">News & Opinion Blog</span>
</div>

<div class="hero-video">
    <video autoplay muted loop>
        <source src="{{ Hero_Video }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="hero-overlay">Breaking News & Exclusive Insights</div>
</div>

{% endif %}
